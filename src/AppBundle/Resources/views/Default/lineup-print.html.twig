{% extends 'AppBundle::layout.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block stylesheets %}

    {{ parent() }}

    <style>

        body {
            background: transparent !important;
            color: #000 !important;
            width: 1485px;
            height: 1050px;
        }

        #wrapper {
            margin: 0 20px;
        }

        .users {
            padding: 0;
            overflow: hidden;
        }

        .user {
            width: 33%;
            float: left;
            padding: 0 50px 0 0;
        }

        .user .username {
            /*margin-left: 50%;*/
            text-align: left;
        }

        .user .username span {
            font-size: 16px;
        }

        .user thead {
            vertical-align: bottom;
        }

        .table tr.col-header td {
            width: 9%;
            padding: 20px 0 10px;
        }

        .user .player-name {
            width: 28%;
            text-align: left;
        }



        .user .table tbody td,
        .user .table thead td {
            height: 35px;
        }

        .user .table tbody td:first-child {
            padding: 0;
        }

        .table tr td {
            text-align: center;
        }

        .table-striped>tbody>tr:nth-of-type(odd) {
            background-color: #D9D9D9;
        }



    </style>

{% endblock %}

{% block body %}

    <div id="wrapper">

    {% block content_main %}

            <h2>{{ matchday }}. Spieltag</h2>

            <div class="row">

                <div class="col-lg-12">

                    <ul class="unstyled users">

                        {% for username, lineup in lineups %}

                        <li class="user">
                            {% include 'AppBundle:Default/Lineup:lineup-print-table.html.twig' %}
                        </li>

                        {% endfor %}

                        {#<li class="item">#}
                            {#{% include 'AppBundle:Default/Lineup:lineup-print-result.html.twig' %}#}
                        {#</li>#}

                    </ul>


                </div>

            </div>

    {% endblock %}

    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}