{% extends 'AppBundle::layout.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block stylesheets %}

    {{ parent() }}

    <style>

        .pi .ibox-content {
            padding: 0;
        }

        .player-list {
            overflow: hidden;
        }

        .player-list .ibox {
            clear: none;
            float: left;
        }

    </style>

{% endblock %}

{% block body %}

    <div id="wrapper">

        {% include 'AppBundle:Default:navigation-main.html.twig' %}

        <div id="page-wrapper" class="gray-bg">

            {% include 'AppBundle:Default:navigation-minor.html.twig' %}

            {% block content_header %}
                {% include '@App/_header.html.twig' with {'name' : 'Mein Team'} %}
            {% endblock %}

            {% block content_main %}

                <div class="row">

                    <div class="col-lg-4">
                        <div class="wrapper wrapper-content animated fadeInUp">
                            <div class="ibox">
                                <div class="ibox-content">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="m-b-md">
                                                <h2>Mein Team</h2>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <dl class="dl-horizontal">
                                                <dt>Anzahl der Spieler:</dt>
                                                <dd>{{ players|length }}</dd>
                                                <dt>Anfangsbudget:</dt>
                                                <dd>  {{ budget|number_format }}</dd>
                                                <dt>Geld ausgeben:</dt>
                                                <dd> {{ money_spend|number_format }} </dd>
                                                <dt>Geld übrig:</dt>
                                                <dd>{{ money_left|number_format }} </dd>
                                                <dt>Geld pro Spieler:</dt>
                                                <dd>{{ money_per_player|number_format }} </dd>
                                            </dl>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-8">
                        <div class="wrapper wrapper-content player-list">

                            <h4>Spielerliste</h4>

                            {% for player in players %}

                                <div class="ibox pi">
                                    <div class="ibox-content">

                                        <div class="player-imitation {{ player.team.name|lower }}">
                                            <img class="img-circle portrait" src="{{ player.thumbUrl }}">
                                        </div>
                                        <div class="player-desc">
                                            <small class="text-muted">{{ player.team }}</small>
                                            <a href="#" class="player-name">{{ player.name }}</a>
                                            <div class="small m-t-xs">
                                                € {{ player.ekPreis|number_format(0, '.', '.', ',') }}
                                            </div>
                                            <span class="label label-{{ player.position.colorName }} position">{{ player.position.shortcut }}</span>
                                        </div>
                                    </div>
                                </div>

                            {% endfor %}

                        </div>
                    </div>


                </div>

            {% endblock %}

        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script>

      $(function () {

      });

    </script>

{% endblock %}