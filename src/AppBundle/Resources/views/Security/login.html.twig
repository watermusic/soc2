{% extends "AppBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <body class="gray-bg">

    {% block fos_user_content %}

        <div class="middle-box text-center loginscreen  animated fadeInDown">
            <div>
                <div>

                    <h1 class="logo-name">SOC</h1>

                </div>
                <h3>Schwule Ochsen Cup 2017/2018</h3>

                <p>
                    Mit Alex, Christian, Jens, Kristin, Torsten und Lutz. Viel Spa√ü!
                </p>

                <form class="m-t" action="{{ path("fos_user_security_check") }}" method="post">

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                    <div class="form-group">
                        <label for="username" class="sr-only">User</label>
                        <select id="username" class="form-control" name="_username" required >
                            {% for user in users %}
                                <option value="{{ user|e }}">{{ user|capitalize }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control large-6{% if error %} error{% endif %}"
                               id="password" name="_password"
                               required
                               placeholder="{{ 'security.login.password'|trans }}"/>
                    </div>
                    <button type="submit" class="btn btn-primary block full-width m-b" id="_submit"
                            name="_submit">{{ 'security.login.submit'|trans }}</button>

                    {#<a href="{{ path("fos_user_resetting_request") }}">#}
                        {#<small>Forgot password?</small>#}
                    {#</a>#}
                </form>
                <p class="m-t">
                    <small>S.O.C. &copy; 2015</small>
                </p>
            </div>
        </div>

    {% endblock fos_user_content %}

    </body>

{% endblock body %}